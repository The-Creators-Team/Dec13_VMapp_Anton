<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.VirginMoney" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#C40202</item>
        <item name="colorPrimaryVariant">#A00002</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Secondary color -->
        <item name="colorSecondary">#00796B</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Tertiary color (optional for additional accents) -->
        <item name="colorTertiary">#FF9800</item>
        <item name="colorOnTertiary">#FFFFFF</item>

        <!-- Background and surface colors -->
        <item name="colorOnBackground">#C40202u</item>
        <item name="colorSurface">#F2F2F2</item>
        <item name="colorOnSurface">#FFFFFF</item>

        <!-- Error color -->
        <item name="colorError">#B00020</item>
        <item name="colorOnError">#FFFFFF</item>

        <!-- Elevated surface colors for Material Design components -->
        <item name="colorSurfaceVariant">#E7E0EC</item>
        <item name="colorOnSurfaceVariant">#C40202</item>

        <!-- Typography -->
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColorPrimary">#C40202</item>
        <item name="android:textColorSecondary">#C40202</item>

        <item name="colorControlHighlight">#FFCDD2</item> <!-- Ripple color -->
        <item name="colorControlActivated">#C40202</item> <!-- Activated state -->
        <item name="android:windowBackground">@android:color/black</item>
    </style>
</resources>
